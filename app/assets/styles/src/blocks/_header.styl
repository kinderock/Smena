// Header
.header
	position fixed
	z-index 199
	top 0
	padding 18px 20px
	size(100%, 60px)
	clearfix()
	
	&_promo
		color white
		
	&_inner
		background: white
		border-bottom: 1px solid #dbdbdb
		
	&__logo
		display block
		float left
		
	&__nav
		float right
		
		&__list
			width 420px
			clearfix()
			
		&__item
			margin-right 30px
			float left
			font(14px, 26px)
	
	&__padding
		padding-top 60px