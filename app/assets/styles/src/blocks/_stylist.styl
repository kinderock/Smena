.stylist
	
	// stylist catalog
	&__list .catalog__photo
		margin-bottom 0

	&__item
		margin-bottom 20px
		
	&__info
		background: white
		text-align center
		padding 15px
		transition: all .15s linear;

	&__item:hover &__info
		background: $clr_blue
		color white
		
	&__name
		font-weight 600
		display block
		margin-bottom 15px
		font(18px, 20px)

		&:hover
			text-decoration none

	&__summary
		clearfix()
		&__item
			float left
			border-left 1px solid #e4e4e4
			color #c1c1c1
			size(90px, 40px)
			
			&:first-child
				border-left none	
				
			& span
				color $clr_blue
				font-weight 600
				font(18px,20px)
					
		
	&__item:hover
		& .catalog__overlay
			opacity(1)
			
		& .stylist__summary__item 
			color white
			border-color: white
			& span
				color inherit
				
		& .rating__item
			margin 0 2px
			retinaSprite($sprite_rating_empty_white_group)
			
			&.state_full
				retinaSprite($sprite_rating_full_white_group)
				
	// stylist profile
	&_profile
		background: $clr_grey_bg
		padding 30px 0
		border-bottom: 1px solid #dbdbdb
		clearfix()
		
		&__info
			float left
			margin-left 20px

		&__name
			font-weight 600
			text-align left
			font(30px, 30px)