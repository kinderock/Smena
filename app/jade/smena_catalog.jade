<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		title Каталог смен

		link(rel="stylesheet", href="foundation/css/app.css")
		link(rel="stylesheet", href="assets/styles/build/production.min.css")
	body
		include includes/header_inner.jade

		.heading.heading_centered
			.wrapper
				h1.title Бесплатные смены

		.filters
			.wrapper.wrapper_row
				.filters__list
					a.filters__item.active(href="") По дате
					a.filters__item(href="") Популярные
					a.filters__item(href="") По стилистам

		.catalog_inner
			.wrapper
				.catalog__list
					.row
						- for (var i=0; i<8; i++)
							.catalog__list__item.large-3.columns
								.catalog__photo
									.catalog__clothes
										img.catalog__clothes__item(src="images/catalog_clothes1.png")
										img.catalog__clothes__item(src="images/catalog_clothes2.png")
										img.catalog__clothes__item(src="images/catalog_clothes3.png")
										img.catalog__clothes__item(src="images/catalog_clothes4.png")

									img(src="images/catalog_photo.jpg")
								
									.catalog__overlay

								.catalog__stylist
									a.catalog__stylist__photo
										img(src="images/catalog_stylist.jpg")
									a.catalog__stylist__name Василий Степанов
									.catalog__stylist__label Стилист

			
			.pagination-centered
				ul.pagination
					li.arrow.unavailable
						a(href='') «
					li.current
						a(href='') 1
					li
						a(href='') 2
					li
						a(href='') 3
					li
						a(href='') 4
					li.unavailable
						a(href='') …
					li
						a(href='') 12
					li
						a(href='') 13
					li.arrow
						a(href='') »

		include includes/footer.jade